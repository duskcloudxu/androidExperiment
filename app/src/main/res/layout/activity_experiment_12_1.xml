<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.myapplication.experiment_12_1">

    <EditText
        android:id="@+id/E12_1_idInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="_id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView10" />

    <EditText
        android:id="@+id/E12_1_userNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="userName"
        app:layout_constraintLeft_toLeftOf="@+id/E12_1_idInput"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/E12_1_idInput" />

    <EditText
        android:id="@+id/E12_1_openBankInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="openBank"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintLeft_toLeftOf="@+id/E12_1_idInput"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/E12_1_userNameInput" />

    <Button
        android:id="@+id/E12_1_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:text="insert"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/E12_1_openBankInput"
        android:layout_marginStart="5dp" />

    <Button
        android:id="@+id/E12_1_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="query"
        app:layout_constraintLeft_toRightOf="@+id/E12_1_insert"
        app:layout_constraintTop_toBottomOf="@+id/E12_1_openBankInput" />

    <ListView
        android:id="@+id/E12_1_queryRes"
        android:layout_width="368dp"
        android:layout_height="320dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/E12_1_query" />

    <Button
        android:id="@+id/E12_1_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="update"
        app:layout_constraintLeft_toRightOf="@+id/E12_1_query"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/E12_1_openBankInput" />

    <Button
        android:id="@+id/E12_1_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="delete"
        app:layout_constraintLeft_toRightOf="@+id/E12_1_update"
        app:layout_constraintTop_toBottomOf="@+id/E12_1_openBankInput" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:text="账号"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/E12_1_userNameInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/E12_1_idInput"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="开户行"
        app:layout_constraintLeft_toLeftOf="@+id/textView12_1"
        app:layout_constraintTop_toBottomOf="@+id/textView12_1" />

    <TextView
        android:id="@+id/textView12_1"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="用户名"
        app:layout_constraintLeft_toLeftOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />
</android.support.constraint.ConstraintLayout>
