<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRed">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <Button
            android:id="@+id/titleView_buttonLeft"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/ic_keyboard_arrow_left_white_24dp"
            android:drawablePadding="-32dp"
            android:text="微信"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/titleView_titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="title"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />
    <!--支撑框架的空元素-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/titleVIew_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:drawableRight="@mipmap/ic_people_white_24dp"/>

    </LinearLayout>
</LinearLayout>
