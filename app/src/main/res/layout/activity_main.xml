<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.myapplication.MainActivity">
<com.example.admin.myapplication.titleView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</com.example.admin.myapplication.titleView>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test"
        android:textColor="@android:color/holo_red_light"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/experi_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="experiment_1"
        />
    <Button
        android:id="@+id/experi_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="experiment_2"
        />
    <Button
        android:id="@+id/experi_2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="experiment_2-2"
        />

</LinearLayout>
