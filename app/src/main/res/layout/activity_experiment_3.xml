<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.admin.myapplication.experiment_3">

        <ListView
            android:id="@+id/E3_listView"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/E3_simpleAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="easy alert" />

        <Button
            android:id="@+id/E3_complicatedAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="complicated alert" />

        <TimePicker
            android:id="@+id/E3_timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/E3_timeLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timeLog" />

        <ProgressBar
            android:id="@+id/E3_oriProcessBar"
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />/

        <ProgressBar
            android:id="@+id/E3_horiProcessBar"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:secondaryProgress="70" />

        <SeekBar
            android:id="@+id/E3_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拖动滑块滑动"
            android:id="@+id/E3_seekBarStatus"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/E3_plusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/E3_minusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/E3_visButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="visible"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>